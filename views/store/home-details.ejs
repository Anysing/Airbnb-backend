<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/navbar') %>
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      this is the detail page of <%= home.housename%>:
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="max-w-sm mx-auto bg-white shadow-lg rounded-lg overflow-hidden mt-10">
            <img src= <%= home.imageURL %> alt="House Image" class="w-full h-48 object-cover">

            <div class="p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-2"><%= home.housename %></h3>
    
                <p class="text-gray-600 mb-1">
                    <span class="font-semibold">Price:</span> <%= home.price %>
                </p>
    
                <p class="text-gray-600 mb-1">
                    <span class="font-semibold">Location:</span> <%= home.location %>
                </p>
                <div class="mt-6">
                  <%- include('../partials/favourites') %>
                </div>
            </div>
        </div>
    </div>

  </main>
</body>
</html>